{
	"editor.formatOnType": true,
	"editor.tabSize": 2,
	"editor.useTabStops": true,

	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"tmp": true,
		"node_modules": true,
		"bower_components": true,
		"assets/img/{lg,md,sm,xs}": true,
		"**/*.min.{css,js,css.map,js.map}": true
	},

	"prettier.tabWidth": 2,
	"prettier.bracketSpacing": false,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "none",

	"perforce.activationMode": "off" 
}
